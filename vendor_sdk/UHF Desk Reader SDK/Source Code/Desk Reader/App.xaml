<Application x:Class="UHF_Desk.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:UHF_Desk"
             StartupUri="Views\MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="\Assets\Languages\en-us.xaml"/>
                <ResourceDictionary Source="\Assets\Languages\zh-cn.xaml"/>
                
                <ResourceDictionary>
                    <local:ViewModelLocator x:Key="locator"/>
                </ResourceDictionary>

                <ResourceDictionary>
                    <local:ObjectConverter x:Key="ObjectConverter"/>
                </ResourceDictionary>

                <ResourceDictionary>
                    <FontFamily x:Key="Iconfont">/Assets/Fonts/#iconfont</FontFamily>
                </ResourceDictionary>

                <ResourceDictionary Source="\Assets\Styles\BaseResources.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
