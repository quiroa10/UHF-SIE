<Window x:Class="UHF_Desk.UpdateEpcDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UHF_Desk"
        mc:Ignorable="d"
        Background="Transparent" AllowsTransparency="True" WindowStyle="None"
        Title="UpdateEpcDialog" Height="250" Width="500" WindowStartupLocation="CenterOwner">
    <WindowChrome.WindowChrome>
        <WindowChrome GlassFrameThickness="1"/>
    </WindowChrome.WindowChrome>
    <Grid Background="Transparent" MouseLeftButtonDown="Grid_MouseLeftButtonDown">
        <Grid.Effect>
            <DropShadowEffect BlurRadius="15" ShadowDepth="0" Opacity="0.1"/>
        </Grid.Effect>
        <Rectangle Width="450" Height="200" RadiusX="5" RadiusY="5" Fill="#F7F9FA" Stroke="#FFF" StrokeThickness="1"/>
        <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBlock Text="{DynamicResource PasswordHEX}" VerticalAlignment="Center" Margin="5"/>
            <TextBox Width="230" Text="{Binding PasswordHEX,UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource BaseTextBoxStyle}"  Grid.Column="1" Margin="5"/>
            <TextBlock Text="{DynamicResource OldCode}" VerticalAlignment="Center" Margin="5" Grid.Row="1"/>
            <TextBox Width="230" Text="{Binding OldCode}" Style="{StaticResource BaseTextBoxStyle}"  IsEnabled="False" Grid.Column="1" Grid.Row="1" Margin="5" TextWrapping="Wrap"/>
            <TextBlock Text="{DynamicResource NewCode}" VerticalAlignment="Center" Margin="5" Grid.Row="2"/>
            <TextBox Width="230" Text="{Binding NewCode,UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource BaseTextBoxStyle}"  Grid.Column="1" Grid.Row="2" Margin="5"/>
            <Button Content="{DynamicResource Setting}" Height="30" Style="{StaticResource NormalButtonStyle}" Command="{Binding SettingCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                    Grid.Row="3" Margin="5" Cursor="Hand" Grid.Column="1"/>
            <Button Content="{DynamicResource Close}" Height="30" Style="{StaticResource NormalButtonStyle}" Command="{Binding CloseCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                    Margin="5,0,0,0" Background="#ccc" Grid.Row="3" Cursor="Hand"/>
        </Grid>
    </Grid>
</Window>
