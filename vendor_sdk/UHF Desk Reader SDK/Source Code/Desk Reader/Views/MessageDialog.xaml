<Window x:Class="UHF_Desk.MessageDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UHF_Desk"
        mc:Ignorable="d"
        Background="Transparent" AllowsTransparency="True" WindowStyle="None"
        WindowStartupLocation="CenterOwner"
        Title="MessageDialog" Height="250" Width="320">
    <WindowChrome.WindowChrome>
        <WindowChrome GlassFrameThickness="1"/>
    </WindowChrome.WindowChrome>
    <Grid Background="Transparent" MouseLeftButtonDown="Grid_MouseLeftButtonDown">
        <Grid.Effect>
            <DropShadowEffect BlurRadius="15" ShadowDepth="0" Opacity="0.1"/>
        </Grid.Effect>
        <Rectangle Width="300" Height="200" RadiusX="30" RadiusY="30" Fill="#F7F9FA" Grid.Row="1" Margin="0,30,0,0"
                   Stroke="#FFF" StrokeThickness="1"/>
        <StackPanel VerticalAlignment="Center" Margin="30,30,30,0">
            <TextBlock Text="{Binding Title}" HorizontalAlignment="Center" FontSize="16" LineHeight="40"/>
            <TextBlock TextWrapping="Wrap" FontSize="14" LineHeight="24" Text="{Binding Message}" TextAlignment="Center"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Center" Grid.Row="2" Margin="0,0,0,20">
            <Button Content="{DynamicResource Sure}" Height="30" Width="90" Click="Sure_Click"  Style="{StaticResource NormalButtonStyle}" Margin="10,0" Cursor="Hand"/>
            <Button Content="{DynamicResource Cancel}" Height="30" Width="90" Click="Cancel_Click"  Style="{StaticResource NormalButtonStyle}" Margin="10,0" Visibility="{Binding Visual}" Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>
