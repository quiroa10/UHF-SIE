<Window x:Class="UHF_Desk.ContinuousWriteDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UHF_Desk"
        mc:Ignorable="d"
        Background="Transparent" AllowsTransparency="True" WindowStyle="None"
        Title="ContinuousWriteDialog" Height="370" Width="800" WindowStartupLocation="CenterOwner">
    <WindowChrome.WindowChrome>
        <WindowChrome GlassFrameThickness="1"/>
    </WindowChrome.WindowChrome>
    <Grid Background="Transparent" MouseLeftButtonDown="Grid_MouseLeftButtonDown">
        <Grid.Effect>
            <DropShadowEffect BlurRadius="15" ShadowDepth="0" Opacity="0.1"/>
        </Grid.Effect>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition/>
            <RowDefinition Height="80"/>
        </Grid.RowDefinitions>
        <Rectangle Width="750" Height="320" RadiusX="5" RadiusY="5" Grid.RowSpan="3" Fill="#F7F9FA" Stroke="#FFF" StrokeThickness="1"/>
        <Button Content="&#xe615;" Style="{StaticResource CloseButtonStyle}" FontFamily="{StaticResource Iconfont}" Cursor="Hand" IsEnabled="{Binding IsWriting,Converter={StaticResource ObjectConverter},ConverterParameter=true:false:true:0}"
                Height="30" Width="50" HorizontalAlignment="Right" Margin="30,0" FontSize="18" Command="{Binding CloseCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"/>
        <Grid Grid.Row="1" Margin="80,0" IsEnabled="{Binding IsWriting,Converter={StaticResource ObjectConverter},ConverterParameter=true:false:true:0}">
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition Height="40" />
                <RowDefinition Height="40" />
                <RowDefinition Height="40" />
                <RowDefinition Height="40" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="{DynamicResource  WriteData}" VerticalAlignment="Center" Margin="5,0" Foreground="Black"/>
            <TextBox Grid.Column="1" Height="30" Text="{Binding Tag.WriteData,UpdateSourceTrigger=PropertyChanged}" Width="Auto" Style="{StaticResource BaseTextBoxStyle}" Margin="5,0" Padding="5,0"/>
            <TextBlock Text="{DynamicResource PasswordHEX}" VerticalAlignment="Center" Margin="5,0" Foreground="Black" Grid.Row="1"/>
            <TextBox Height="30" Text="{Binding Tag.PasswordHEX,UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource BaseTextBoxStyle}" Margin="5,0" Grid.Row="1" Grid.Column="1" Padding="5,0"/>
            <TextBlock Text="{DynamicResource StartAddrWORD}" VerticalAlignment="Center" Margin="5,0" Foreground="Black" Grid.Row="2"/>
            <TextBox Height="30" Text="{Binding Tag.StartAddrWORD}" Style="{StaticResource BaseTextBoxStyle}" Margin="5,0" Grid.Row="2" Grid.Column="1" Padding="5,0"/>
            <TextBlock Text="{DynamicResource DataLenWORD}" VerticalAlignment="Center" Margin="5,0" Foreground="Black" Grid.Row="3"/>
            <TextBox Height="30" Text="{Binding Tag.DataLenWORD}" Style="{StaticResource BaseTextBoxStyle}" Margin="5,0" Grid.Row="3" Grid.Column="1" Padding="5,0"/>
            <TextBlock Text="{DynamicResource WriteInterval}" VerticalAlignment="Center" Margin="5,0" Foreground="Black" Grid.Row="4"/>
            <TextBox Height="30" Text="{Binding WriteInterval}" Style="{StaticResource BaseTextBoxStyle}" Margin="5,0" Grid.Row="4" Grid.Column="1" Padding="5,0"/>
        </Grid>

        <StackPanel Margin="80,5,80,30" Orientation="Horizontal" Grid.Row="2">
            <Button Content="{Binding ButtonText}" Height="30" Width="100" Style="{StaticResource NormalButtonStyle}" Command="{Binding ButtonClickCommand}" VerticalAlignment="Bottom" Margin="5" Cursor="Hand"/>
            <TextBlock Text="{Binding Info}" FontSize="30" Margin="10,0" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>
