<UserControl x:Class="UHF_Desk.SetUpView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:local="clr-namespace:UHF_Desk"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="1000"
             DataContext="{Binding Source={StaticResource locator},Path=SetUpViewModel}">
    <Grid>
        <Border Width="600" HorizontalAlignment="Center" Margin="20" BorderThickness="1" BorderBrush="#ccc" CornerRadius="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="80"/>
                    <RowDefinition/>
                    <RowDefinition Height="80"/>
                </Grid.RowDefinitions>
                <TextBlock Text="{DynamicResource SetUp}" Foreground="#4682B4" VerticalAlignment="Center" FontWeight="Bold" Margin="20,0"/>
                <Border BorderThickness="0,0,0,1" BorderBrush="#ccc"/>

                <ScrollViewer VerticalScrollBarVisibility="Auto" VerticalAlignment="Top" Margin="5,20" Grid.Row="1">
                    <Grid Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="60"/>
                            <RowDefinition Height="60"/>
                            <RowDefinition Height="60"/>
                            <RowDefinition Height="60"/>
                            <RowDefinition Height="60"/>
                            <RowDefinition Height="60"/>
                            <RowDefinition Height="60"/>
                            <RowDefinition Height="60"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="{DynamicResource WorkRegion}" VerticalAlignment="Center" Margin="5,0"/>
                        <ComboBox Height="30" SelectedValue="{Binding Device.Region}" SelectedIndex="{Binding Device.RegionIndex}" Style="{StaticResource PropComboBoxStyle}"  BorderThickness="0" Width="80" Margin="5,0"
                                  Grid.Column="1" HorizontalAlignment="Right">
                            <ComboBox.ItemsSource>
                                <x:Array Type="sys:String">
                                    <sys:String>Custom</sys:String>
                                    <sys:String>USA</sys:String>
                                    <sys:String>Korea</sys:String>
                                    <sys:String>Europe</sys:String>
                                    <sys:String>Japan</sys:String>
                                    <sys:String>Malaysia</sys:String>
                                    <sys:String>Europe3</sys:String>
                                    <sys:String>China_1</sys:String>
                                    <sys:String>China_2</sys:String>
                                </x:Array>
                            </ComboBox.ItemsSource>
                        </ComboBox>
                        <Border Grid.ColumnSpan="2" BorderBrush="#ccc" BorderThickness="0,0,0,1"/>
                        <Border Grid.ColumnSpan="2" BorderBrush="#4682B4" BorderThickness="0,0,0,1" Width="20" HorizontalAlignment="Left" Margin="15,0"/>

                        <TextBlock Text="{DynamicResource StartFreq}" VerticalAlignment="Center" Margin="5,0" Grid.Row="1"/>
                        <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Right">
                            <ComboBox SelectedValue="{Binding Device.StartFreq}" SelectedIndex="{Binding Device.StartFreqIndex}" Style="{StaticResource PropComboBoxStyle}" BorderThickness="0" Width="80" Margin="5,0" 
                                      ItemsSource="{Binding Device.StartFreqItem}" Height="30"/>
                            <TextBlock Text="MHz" VerticalAlignment="Center" Margin="5,0"/>
                        </StackPanel>
                        <Border Grid.ColumnSpan="2" Grid.Row="1" BorderBrush="#ccc" BorderThickness="0,0,0,1"/>
                        <Border Grid.ColumnSpan="2" Grid.Row="1" BorderBrush="#4682B4" BorderThickness="0,0,0,1" Width="20" HorizontalAlignment="Left" Margin="15,0"/>

                        <TextBlock Text="{DynamicResource EndFreq}" VerticalAlignment="Center" Margin="5,0" Grid.Row="2"/>
                        <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="2" HorizontalAlignment="Right">
                            <ComboBox SelectedValue="{Binding Device.EndFreq}" SelectedIndex="{Binding Device.EndFreqIndex}" Style="{StaticResource PropComboBoxStyle}" BorderThickness="0" Width="80" Margin="5,0" 
                                      ItemsSource="{Binding Device.EndFreqItem}" Height="30"/>
                            <TextBlock Text="MHz" VerticalAlignment="Center" Margin="5,0"/>
                        </StackPanel>
                        <Border Grid.ColumnSpan="2" Grid.Row="2" BorderBrush="#ccc" BorderThickness="0,0,0,1"/>
                        <Border Grid.ColumnSpan="2" Grid.Row="2" BorderBrush="#4682B4" BorderThickness="0,0,0,1" Width="20" HorizontalAlignment="Left" Margin="15,0"/>

                        <TextBlock Text="{DynamicResource PointFreq}" VerticalAlignment="Center" Margin="5,0,20,0" Grid.Row="3"/>
                        <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="3" HorizontalAlignment="Right">
                            <RadioButton Height="30" Width="50" Content="{DynamicResource True}" IsChecked="{Binding Device.IsPointFreq}" Style="{StaticResource GroupRadioButton_Left}"/>
                            <RadioButton Height="30" Width="50" Content="{DynamicResource False}" IsChecked="{Binding Device.IsNoPointFreq}" Style="{StaticResource GroupRadioButton_Right}"/>
                        </StackPanel>
                        <Border Grid.ColumnSpan="2" Grid.Row="3" BorderBrush="#ccc" BorderThickness="0,0,0,1"/>
                        <Border Grid.ColumnSpan="2" Grid.Row="3" BorderBrush="#4682B4" BorderThickness="0,0,0,1" Width="20" HorizontalAlignment="Left" Margin="15,0"/>

                        <TextBlock Text="{DynamicResource OutputPower}" VerticalAlignment="Center" Margin="5,0" Grid.Row="4"/>
                        <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="4" HorizontalAlignment="Right">
                            <ComboBox Height="30" SelectedValue="{Binding Device.Power}" Style="{StaticResource PropComboBoxStyle}" BorderThickness="0" Width="80" Margin="5,0">
                                <ComboBox.ItemsSource>
                                    <x:Array Type="sys:String">
                                        <sys:String>0</sys:String>
                                        <sys:String>1</sys:String>
                                        <sys:String>2</sys:String>
                                        <sys:String>3</sys:String>
                                        <sys:String>4</sys:String>
                                        <sys:String>5</sys:String>
                                        <sys:String>6</sys:String>
                                        <sys:String>7</sys:String>
                                        <sys:String>8</sys:String>
                                        <sys:String>9</sys:String>
                                        <sys:String>10</sys:String>
                                        <sys:String>11</sys:String>
                                        <sys:String>12</sys:String>
                                        <sys:String>13</sys:String>
                                        <sys:String>14</sys:String>
                                        <sys:String>15</sys:String>
                                        <sys:String>16</sys:String>
                                        <sys:String>17</sys:String>
                                        <sys:String>18</sys:String>
                                        <sys:String>19</sys:String>
                                        <sys:String>20</sys:String>
                                    </x:Array>
                                </ComboBox.ItemsSource>
                            </ComboBox>
                            <TextBlock Text="dBm" VerticalAlignment="Center" Margin="5,0"/>
                        </StackPanel>
                        <Border Grid.ColumnSpan="2" Grid.Row="4" BorderBrush="#ccc" BorderThickness="0,0,0,1"/>
                        <Border Grid.ColumnSpan="2" Grid.Row="4" BorderBrush="#4682B4" BorderThickness="0,0,0,1" Width="20" HorizontalAlignment="Left" Margin="15,0"/>

                        <TextBlock Text="{DynamicResource DeviceAddr}" VerticalAlignment="Center" Margin="5,0" Grid.Row="5"/>
                        <TextBox Height="30" Width="80" Text="{Binding Device.Addr,UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource BaseTextBoxStyle}" Margin="5,0" Grid.Column="1" Grid.Row="5" HorizontalAlignment="Right"/>
                        <Border Grid.ColumnSpan="2" Grid.Row="5" BorderBrush="#ccc" BorderThickness="0,0,0,1"/>
                        <Border Grid.ColumnSpan="2" Grid.Row="5" BorderBrush="#4682B4" BorderThickness="0,0,0,1" Width="20" HorizontalAlignment="Left" Margin="15,0"/>

                        <TextBlock Text="{DynamicResource CommunicationInterface}" VerticalAlignment="Center" Margin="5,0" Grid.Row="6"/>
                        <ComboBox SelectedValue="{Binding Device.Port}" SelectedIndex="{Binding Device.PortIndex}" Style="{StaticResource PropComboBoxStyle}" 
                                  BorderThickness="0" Width="100" Height="30" Margin="5,0" Grid.Column="1" Grid.Row="6" HorizontalAlignment="Right">
                            <ComboBox.ItemsSource>
                                <x:Array Type="sys:String">
                                    <sys:String>USB</sys:String>
                                    <sys:String>KeyBoard</sys:String>
                                    <sys:String>CDC_COM</sys:String>
                                </x:Array>
                            </ComboBox.ItemsSource>
                        </ComboBox>
                        <Border Grid.ColumnSpan="2" Grid.Row="6" BorderBrush="#ccc" BorderThickness="0,0,0,1"/>
                        <Border Grid.ColumnSpan="2" Grid.Row="6" BorderBrush="#4682B4" BorderThickness="0,0,0,1" Width="20" HorizontalAlignment="Left" Margin="15,0"/>

                        <TextBlock Text="{DynamicResource IsBuzzer}" VerticalAlignment="Center" Margin="5,0" Grid.Row="7"/>
                        <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="7" HorizontalAlignment="Right">
                            <RadioButton Width="50" Height="30" Content="{DynamicResource True}" IsChecked="{Binding Device.IsBuzzer}" Style="{StaticResource GroupRadioButton_Left}"/>
                            <RadioButton Width="50" Height="30" Content="{DynamicResource False}" IsChecked="{Binding Device.IsNoBuzzer}" Style="{StaticResource GroupRadioButton_Right}"/>
                        </StackPanel>
                        <Border Grid.ColumnSpan="2" Grid.Row="7" BorderBrush="#ccc" BorderThickness="0,0,0,1"/>
                        <Border Grid.ColumnSpan="2" Grid.Row="7" BorderBrush="#4682B4" BorderThickness="0,0,0,1" Width="20" HorizontalAlignment="Left" Margin="15,0"/>
                    </Grid>
                </ScrollViewer>

                <Border BorderThickness="0,1,0,0" BorderBrush="#ccc" Grid.Row="2"/>
                <StackPanel Orientation="Horizontal" Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Button Content="{DynamicResource Getting}" Height="30" Width="80" Style="{StaticResource NormalButtonStyle}" Margin="5,0" Cursor="Hand"
                               Command="{Binding GetCommand}" />
                    <Button Content="{DynamicResource Setting}" Height="30" Width="80" Style="{StaticResource NormalButtonStyle}" Margin="5,0" Cursor="Hand"
                               Command="{Binding SetCommand}" />
                    <Button Content="{DynamicResource Initialization}" Height="30" Width="80" Style="{StaticResource NormalButtonStyle}"
                            Command="{Binding InitializationCommand}" Margin="5" Cursor="Hand"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
